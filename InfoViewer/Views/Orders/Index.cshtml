@model ViewModel<Order>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Customer</th>
			<th scope="col">Date</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Orders) {
		<tr>
			<th scope="row">@item.Id</th>
			<td>@item.Customer.FullName</td>
			<td>@item.OrderDate.ToLongDateString()</td>
		</tr>
		}
	</tbody>
</table>

<div class="container">
	@(Html.CreatePagination(Model.PageInfo ,x=> Url.Action("Index", new{page = x})))
</div>


    